<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Container"/>

    <style name="Container.ListHeaderRoot">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Container.ListHeaderText">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="LabelBase">
        <item name="android:alpha">.85</item>
    </style>

    <style name="LabelBase.Label">
        <!--We are adding more properties in the v16 style-->
    </style>

    <style name="LabelBase.Label.ListNameHeader">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LabelBase.Label.ListTitleHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="LabelBase.Label.BigText">
        <item name="android:textSize">32dp</item>
    </style>
